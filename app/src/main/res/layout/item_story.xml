<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="storyData"
            type="com.altaf.storyblog.domain.model.Story" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_3sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivStoryBanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.StoryBlog.MediumComponent"
                app:imageUrl="@{storyData.bannerImageUrl}"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{storyData.title}"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_constraintEnd_toEndOf="@id/ivStoryBanner"
                app:layout_constraintStart_toStartOf="@id/ivStoryBanner"
                app:layout_constraintTop_toBottomOf="@id/ivStoryBanner"
                tools:text="Sample Story Title" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:ellipsize="end"
                android:maxLines="3"
                app:textOther="@{storyData.content}"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                app:layout_constraintEnd_toEndOf="@id/ivStoryBanner"
                app:layout_constraintStart_toStartOf="@id/ivStoryBanner"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                tools:text="This is a sample story content that will be truncated after two lines..." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReadMore"
                style="@style/Widget.StoryBlog.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="@string/read_more"
                app:layout_constraintEnd_toEndOf="@id/ivStoryBanner"
                app:layout_constraintTop_toBottomOf="@id/tvContent"
                tools:ignore="UsingOnClickInXml" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

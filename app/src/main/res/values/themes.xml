<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryBlogApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Action Bar color -->
        <item name="colorPrimary">@color/colorActionBar</item>
        <item name="android:statusBarColor">#FF6E1339</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Bottom Navigation color -->
        <item name="colorSurface">@color/colorBottomNavigation</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Text colors for better visibility -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.StoryBlogApp" parent="Base.Theme.StoryBlogApp" />
    
    <!-- Style for Bottom Navigation -->
    <style name="Widget.StoryBlogApp.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_selector</item>
        <item name="android:background">@color/colorBottomNavigation</item>
    </style>

    <!-- Shape Appearance Style -->
    <style name="ShapeAppearance.StoryBlog.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Text Button Style -->
    <style name="Widget.StoryBlog.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>